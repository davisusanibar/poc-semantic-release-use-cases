{
  "branches": [
    { "name": "+([0-9])?(.{+([0-9]),x}).x", "channel": "snapshots" },
    { "name": "main", "channel": "releases" },
    { "name": "next", "channel": "snapshots" },
    { "name": "next-major", "channel": "snapshots" },
    { "name": "beta", "channel": "snapshots", "prerelease": true },
    { "name": "alpha", "channel": "snapshots", "prerelease": true },
    { "name": "custom", "channel": "snapshots", "prerelease": true }
  ],
  "preset": "conventionalcommits",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/exec",
    "gradle-semantic-release-plugin",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "Release Notes\n---",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "gradle.properties",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}"
      }
    ]
  ]
}
